@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (ViewBag.ModalTrigger == "OSR")
{
    <div class="modal" id="myModal">
        <div class="modal-dialog modal-lg" style="height:1200px;">
            <div class="modal-content">

                <!-- Modal Header -->
                <div class="modal-header">
                    <h4 class="modal-title"></h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>

                <!-- Modal body -->
                <div class="modal-body">
                    <div hidden>
                        <input id="id-placeholder" />
                    </div>
                    <div class="container">
                        <div class="row">
                            <div class="col-4">
                                <h4>M3 NUMBER</h4>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-6">
                                <input class="form-control" id="m3-number" readonly />
                            </div>
                        </div>
                        <hr />
                        <div class="row">
                            <div class="col-4">
                                TESTER ID
                            </div>

                        </div>
                        <div class="row">
                            <div class="col-4">
                                <input class="form-control" id="tester-id" list="tester-id-datalist" readonly />
                            </div>

                        </div>
                        <div class="row">
                            <div class="col-4">
                                HANDLER ID
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-4">
                                <input class="form-control" id="handler-id" list="handler-id-datalist" readonly />
                                <datalist id="handler-id-datalist"></datalist>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-4">
                                FAMILY
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-4">
                                <input class="form-control" id="family" readonly />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-4">
                                PACKAGE
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-4">
                                <input class="form-control" id="package" readonly />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-4">
                                PROCESS
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-4">
                                <input class="form-control" id="process" readonly />
                            </div>
                        </div>
                        <hr />
                        <div class="row">
                            <div class="col-4">
                                REQUESTED BY
                            </div>
                            <div class="col-4">
                                DATE SUBMITTED
                            </div>

                        </div>
                        <div class="row">
                            <div class="col-4">
                                <input class="form-control" id="requested-by" readonly />
                            </div>

                            <div class="col-4">
                                <input class="form-control" id="date-submitted" readonly />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-4">
                                EXPECTED DATE OF SETUP
                            </div>
                            <div class="col-4">
                                RECENTLY UPDATED BY
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-4">
                                <div class="input-group">

                                    @if (ViewBag.employeeData != null)
                                    {
                                        <div class="input-group mb-3">
                                            <input id="expected-date-of-setup" class="form-control customdate" type="text" />
                                            <div class="input-group-append">
                                                @*<a href="#" class="btn btn-success" id="enable-update-expected-date-of-setup" data-toggle="popover"><i class="fas fa-cog"></i></a>*@

                                            </div>
                                        </div>
                                    }
                                    else
                                    {
                                        <input id="expected-date-of-setup" class="form-control" type="text" readonly />
                                    }

                                </div>
                            </div>
                            <div class="col-4">
                                <input class="form-control" id="recently-updated-by" readonly />
                            </div>
                        </div>
                        <div class="update-expected-date-of-setup">
                            <div class="row">
                                <div class="col-12">
                                    REASON TO CHANGE EXPECTED DATE OF SETUP
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-8">
                                    <textarea class="form-control" id="reason-to-change-setup"></textarea>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-4">
                                SHIFT
                            </div>
                            @if (ViewBag.employeeData != null)
                            {
                                <div class="col-4 update-checker">
                                    REMARKS
                                </div>
                            }

                        </div>
                        <div class="row">
                            <div class="col-4">
                                <input class="form-control" id="shift" readonly>
                            </div>
                            @if (ViewBag.employeeData != null)
                            {
                                <div class="col-6 update-checker">
                                    <textarea class="form-control" id="remarks" rows="3"></textarea>
                                </div>
                            }
                        </div>
                        @if (ViewBag.employeeData != null)
                        {
                            <div class="update-checker">
                                <div class="row">
                                    <div class="col-4">
                                        STATUS
                                    </div>
                                    <div class="col-4 release-checking">
                                        RELEASED TO <span style="font-size:10px">(*use AD Account)</span>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-4">
                                        <select class="form-control" id="status"></select>
                                    </div>
                                    <div class="col-4 release-checking">
                                        <input id="released-to" class="form-control" list="released-list" placeholder="Username"/>
                                        <datalist id="released-list"></datalist>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-4 offset-4 mt-2 release-checking">
                                        <input id="released-to-password" class="form-control" list="released-list" placeholder="Password" type="password" />
                                        <datalist id="released-list"></datalist>
                                    </div>
                                </div>
                            </div>
                        }

                    </div>
                </div>

                <!-- Modal footer -->
                <div class="modal-footer">
                    @if (ViewBag.employeeData != null)
                    {
                        <div class="update-checker">
                            <button type="button" id="update-osr" class="btn btn-success">UPDATE</button>
                        </div>
                    }
                </div>

            </div>
        </div>
    </div>

}
